@model Taxonomia_App.Models.Color_sec

@{
    ViewBag.Title = "Create";
}

<h2>Registrar</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Color Secundario</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.Color_sec1, new { htmlAttributes = new { @class = "form-control", id="cs" } })
                @Html.ValidationMessageFor(model => model.Color_sec1, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" onclick="guardar()" value="Guardar" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar", "Index")
</div>

<script type="text/javascript">
    function guardar() {
        var c = document.getElementById("cs").value;
        if (c = null || c == "") {
            document.getElementById("cs").focus();
            document.getElementById("cs").placeholder = "Debe llenar esté espacio";

        } else {
            document.getElementsByTagName("Form")[0].submit();
        }
    }

</script>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
