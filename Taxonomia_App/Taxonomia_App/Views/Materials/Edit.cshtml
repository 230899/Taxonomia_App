@model Taxonomia_App.Models.Material

@{
    ViewBag.Title = "Edit";
}

<h2>Editar</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Material</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.Material1, new { htmlAttributes = new { @class = "form-control", id="mat" } })
                @Html.ValidationMessageFor(model => model.Material1, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" onclick="actualizar()" value="Actualizar" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar", "Index")
</div>

<script type="text/javascript">
    function actualizar() {
        var m = document.getElementById("mat").value;
        if (m = null || m == "") {
            document.getElementById("mat").focus();
            document.getElementById("mat").placeholder = "Debe llenar esté espacio";

        } else {
            document.getElementsByTagName("Form")[0].submit();
        }
    }

</script>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
