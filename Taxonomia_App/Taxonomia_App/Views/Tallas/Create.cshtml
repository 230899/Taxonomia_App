@model Taxonomia_App.Models.Talla

@{
    ViewBag.Title = "Create";
}

<h2>Registrar</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Talla</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <h3>Talla: </h3>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Talla1, new { htmlAttributes = new { @class = "form-control", id="ta" } })
                @Html.ValidationMessageFor(model => model.Talla1, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Num_Talla, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Num_Talla, new { htmlAttributes = new { @class = "form-control", id="num_tall" } })
                @Html.ValidationMessageFor(model => model.Num_Talla, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" onclick="guardar()" value="Guardar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar", "Index")
</div>

<script type="text/javascript">
    function guardar() {
        var t = document.getElementById("ta").value;
        var ta = document.getElementById("num_tall").value;
        if (t = null || t == "") {
            document.getElementById("ta").focus();
            document.getElementById("ta").placeholder = "Debe llenar esté espacio";

        } else if (ta = null || ta == "") {
            document.getElementById("num_tall").focus();
            document.getElementById("num_tall").placeholder = "Debe llenar esté espacio";
        } else {
            document.getElementsByTagName("Form")[0].submit();
        }
    }

</script>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
